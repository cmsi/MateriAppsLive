#!/bin/bash -eux

VB_VERSION=$(VBoxManage -V | cut -d. -f1)
MA4_VERSION="@MA4_VERSION@"
ARCH=$(arch)
if [ "$ARCH" = "x86_64" ]; then
	arch="amd64"
else
	arch="arm64"
fi

if [ -f ma4-${arch}.json ]; then
	rm -rf output-virtualbox-iso
	packer build ma4-${arch}.json 2>&1 | tee build-ma4-${arch}.log
	if [ -f output-virtualbox-iso/ceenv-${MA4_VERSION}-${arch}.ova ]; then
		mv -f output-virtualbox-iso/ceenv-${MA4_VERSION}-${arch}.ova .
	else
	    echo "Error: build failed."
	    exit 127
	fi
fi
